# rename this file to .env and fill in the values

# --- Provider API Keys ---
# Add your API keys here. You can add multiple keys for the same provider.
# The format is: PROVIDER_API_KEYS=key1:model1,model2,key2:model3,model4

# OpenAI
OPENAI_API_KEYS=sk-your-key-here:gpt-3.5-turbo,gpt-4
# OPENAI_API_BASE_URL=https://api.openai.com/v1 # Optional, defaults to OpenAI

# Deepseek (uses OpenAI format)
# DEEPSEEK_API_KEYS=sk-your-key-here:deepseek-chat,deepseek-coder

# OpenRouter (uses OpenAI format)
# OPENROUTER_API_KEYS=sk-your-key-here:openrouter-model1,openrouter-model2


# --- Load Balancer Settings ---
# Cooldown period in milliseconds for a provider after a failure
COOLDOWN_PERIOD_MS=300000 # 5 minutes


# --- Server Settings ---
PORT=3000
